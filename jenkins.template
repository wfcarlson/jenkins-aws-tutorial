Resources:

  JenkinsInternetGateway:
    Type: AWS::EC2::InternetGateway
    Properties: {}

  InternetGatewayAttachment:
    Type: AWS::EC2::VPCGatewayAttachment
    Properties:
      InternetGatewayId: !Ref JenkinsInternetGateway
      VpcId: !Ref TestJenkinsVPC

  TestEc2Instance: 
    Type: AWS::EC2::Instance
    Properties: 
      ImageId: ami-0ff8a91507f77f867
#        Fn::FindInMap:
#          - "RegionMap"
#          - Ref: "AWS::Region"
#          - "AMI"
      KeyName: 
        Ref: KeyName
      NetworkInterfaces: 
        - AssociatePublicIpAddress: "true"
          DeviceIndex: "0"
          GroupSet: 
            - Ref: "SSHSecurityGroup"
          SubnetId: 
            Ref: "TestJenkinsSubnet"
      UserData:
        Fn::Base64:
          !Sub |
            #!/bin/bash
            yum update -y
            yum install -y docker

            #run docker, add user to docker group
            service docker start
            usermod -a -G docker ec2-user

            #run jenkins image
            docker run -u root --rm -d -p 8080:8080 -p 50000:50000 -v jenkins-data:/var/jenkins_home -v /var/run/docker.sock:/var/run/docker.sock jenkinsci/blueocean

            #forward traffic from port 80 to port 8080
            iptables -A INPUT -i eth0 -p tcp --dport 80 -j ACCEPT
            iptables -A INPUT -i eth0 -p tcp --dport 8080 -j ACCEPT
            iptables -A PREROUTING -t nat -i eth0 -p tcp --dport 80 -j REDIRECT --to-port 8080
      Tags:
        -
          Key: Name
          Value: "Jenkins EC2 instance"

  TestJenkinsVPC:
    Type: 'AWS::EC2::VPC'
    Properties:
      CidrBlock: 10.0.0.0/16
    Metadata:
      'AWS::CloudFormation::Designer':
        id: 6753423a-9fb5-478e-a94d-bccb4d6d4769

  TestJenkinsSubnet:
    Type: 'AWS::EC2::Subnet'
    Properties:
      CidrBlock: 10.0.0.0/16
      VpcId: !Ref TestJenkinsVPC
      MapPublicIpOnLaunch: true
    Metadata:
      'AWS::CloudFormation::Designer':
        id: 204d5695-12c0-4425-9a92-af4930757ac7
    
  SSHSecurityGroup:
    Type: 'AWS::EC2::SecurityGroup'
    Properties:
      GroupName: test-group
      GroupDescription: "Enable SSH access via port 22"
      SecurityGroupIngress: 
        - 
          IpProtocol: "tcp"
          FromPort: 22
          ToPort: 22
          CidrIp: "0.0.0.0/0"
        -
          IpProtocol: "tcp"
          FromPort: 80
          ToPort: 80
          CidrIp: "0.0.0.0/0"
      VpcId: !Ref TestJenkinsVPC
    Metadata:
      'AWS::CloudFormation::Designer':
        id: 26dfb23e-9d28-4ea3-8b62-7701150bb238

  PublicRouteTable:
    Type: AWS::EC2::RouteTable
    Properties: 
      VpcId: !Ref TestJenkinsVPC

  DefaultPublicRoute: 
    Type: AWS::EC2::Route
    DependsOn: InternetGatewayAttachment
    Properties: 
      RouteTableId: !Ref PublicRouteTable
      DestinationCidrBlock: 0.0.0.0/0
      GatewayId: !Ref JenkinsInternetGateway

  PublicSubnet1RouteTableAssociation:
    Type: AWS::EC2::SubnetRouteTableAssociation
    Properties:
      RouteTableId: !Ref PublicRouteTable
      SubnetId: !Ref TestJenkinsSubnet

